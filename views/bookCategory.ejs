<div class="row">
    <div class="col-3" style="border-right: 1px solid gray;; height: 770px">
        <h5 style="margin-top: 10px;margin-bottom: 10px">Quản lý sách</h5>
        <div class="list-group">
            <a href="/BookCategory" class="list-group-item list-group-item-action">Loại Sách</a>
            <a href="/Author" class="list-group-item list-group-item-action">Tác Giả </a>
            <a href="/Book" class="list-group-item list-group-item-action">Sách</a>
            <a href="/loanSlip" class="list-group-item list-group-item-action">Phiếu Mượn</a>
            <a href="/salesSlip" class="list-group-item list-group-item-action">Phiếu Bán</a>
        </div>

        <h5 style="margin-top: 10px;margin-bottom: 10px">Quản lý sản phẩm</h5>
        <div class="list-group">
            <a href="/goodsCategory" class="list-group-item list-group-item-action">Loại Sản Phẩm</a>
            <a href="/Goods" class="list-group-item list-group-item-action">Sản Phẩm </a>
            <a href="/Bill" class="list-group-item list-group-item-action">Hóa Đơn</a>
        </div>

        <h5 style="margin-top: 20px">Thêm loại sách</h5>
        <form action="bookCategory/addBookCategory" method="post" enctype="multipart/form-data" onsubmit="return validateAndRedirect('add')">
            <input id="input" name="name" type="text" placeholder="Enter name category...">
            <br><br>
            <input id="push" type="submit" value="Save" >
        </form>
        <h5 style="margin-top: 20px">Cập nhật loại sách</h5>
        <form action="bookCategory/updateBookCategory" method="post" enctype="multipart/form-data" onsubmit="return validateAndRedirect('update')">
            <input id="inputID" name="_id" type="hidden" readonly>
            <input id="inputName" name="name" type="text" placeholder="Enter name category...">
            <br><br>
            <input id="push" type="submit" value="Update" >
        </form>
    </div>
    <div class="col-9" style="height: 600px">
        <h5>Thể loại sách</h5>
        <div class="ListCategory" >
            <% const book = dataBook%>
            <% const author = dataAuthor%>
            <% data.forEach((bookCategory) => { %>
                <button class="itemCategory" onclick="openAlertDialog('<%= bookCategory._id %>', '<%= bookCategory.name %>', <%= JSON.stringify(book) %>, <%= JSON.stringify(author) %> )">
                    <em class="itemTextCategory"><%= bookCategory.name %></em>
                </button>
            <% }) %>
        </div>
        <hr>
        <h5 style="margin-bottom: 10px; font-style: italic" id="titleSearch"></h5>
        <div id="divBooks"></div>
    </div>
</div>
</body>
<script>
    function loadItemData(categoryId, categoryName) {
        // Lấy các trường input
        var input_id = document.getElementById('inputID');
        var inputName = document.getElementById('inputName');


        // Gán dữ liệu của member vào các trường input
        input_id.value = categoryId;
        inputName.value = categoryName;

    }

    // Thêm biến global để lưu trạng thái dialog đang mở
    let isDialogOpen = false;
    function openAlertDialog(categoryId, categoryName,dataBook,dataAuthor) {
        if (isDialogOpen) return; // Đã mở rồi thì không mở lại
        const alertDialog = document.createElement('div');
        alertDialog.classList.add('alert-dialog');
        isDialogOpen = true; // Đánh dấu rằng dialog đang mở

        const closeButton = document.createElement('button');
        closeButton.classList.add('close-button');
        closeButton.textContent = 'X';
        closeButton.addEventListener('click', closeAlertDialog);

        const content = document.createElement('div');
        content.classList.add('alert-dialog-content');
        content.textContent = `Bạn có muốn thực hiện hành động nào với danh mục: ${categoryName}?`;

        const updateButton = document.createElement('button');
        updateButton.classList.add('alert-dialog-button');
        updateButton.textContent = 'Cập nhật';
        updateButton.addEventListener('click', function() {
            // Xử lý khi nút Update được bấm
            // Ví dụ: Chuyển hướng đến trang cập nhật danh mục sách
            loadItemData(categoryId, categoryName)
            closeAlertDialog();
        });

        const searchButton = document.createElement('button');
        searchButton.classList.add('alert-dialog-button');
        searchButton.textContent = 'Hiển thị sách';
        searchButton.addEventListener('click', function() {
            // Xử lý khi nút Tìm kiếm được bấm
            // Ví dụ: Thực hiện tìm kiếm với tên danh mục sách
            performSearch(categoryId,categoryName,dataBook,dataAuthor);
            closeAlertDialog();
        });
        alertDialog.appendChild(closeButton);
        alertDialog.appendChild(content);
        alertDialog.appendChild(updateButton);
        alertDialog.appendChild(searchButton);

        document.body.appendChild(alertDialog);
    }

    function closeAlertDialog() {
        const alertDialog = document.querySelector('.alert-dialog');
        if (alertDialog) {
            document.body.removeChild(alertDialog);
            isDialogOpen = false; // Đánh dấu rằng dialog đã đóng
        }
    }

    function performSearch(categoryID, categoryName, book, author) {
        const divBook = document.getElementById('divBooks');
        const titleSearch = document.getElementById('titleSearch');
        var title = '';
        var bookSearch = [];

        for (var i = 0; i < book.length; i++) {
            if (categoryID === book[i].bookCategory) {
                bookSearch.push(book[i]);
            }
        }


        if (bookSearch.length === 0){
            title = 'Không có cuốn sách nào có thể loại là : ' + categoryName;
        }else {
            title = 'Tất cả các cuốn sách có thể loại là : ' + categoryName;
        }

        let bookSearchDiv = `
        <div class="ListBook">
    `;

        bookSearch.forEach((book) => {
            const nameAuthor = author.find(author => author._id === book.author);
            const booksJson = JSON.stringify(book);
            const encodedBooksJson = encodeURI(booksJson);
            bookSearchDiv += `
            <div class="itemBook">
                <img class="imgBook" src="${book.image}" alt="${book.name}">
                ${book.name.length > 20 ? `<em class="itemTextName">${book.name.slice(0, 20) + '...'}</em>` : `<em class="itemTextName">${book.name}</em>`}
                <br>
                ${nameAuthor ? `<em class="itemText">TG: ${nameAuthor.fullName}</em>` : ''}
                <br>
                <em class="itemText">Giá tiền: ${(book.price || 0).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</em>
                 <button style="margin-left: 5px; margin-top: 5px; width: 95%" type="button" class="btn btn-warning"
                     onclick="showDetails('${encodedBooksJson}')">Details</button>
            </div>
        `;
        });

        bookSearchDiv += `
        </div>
    `;
        titleSearch.innerHTML = title
        divBook.innerHTML = bookSearchDiv;
    }


    function showDetails(details){
        const detail = decodeURI(details);
        const books = JSON.parse(detail);
        console.log(books)
    }

    function validateAndRedirect(status) {
        var name;
        if (status==='add'){
            name = document.getElementById('input').value;




        }else if (status==='update') {
            name = document.getElementById('inputName').value;
        }

        if (name.length === 0) {
            alert('Vui lòng điền đầy đủ thông tin!');
            return false
        }
    }

</script>
