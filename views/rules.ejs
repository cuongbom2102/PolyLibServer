    <div class="col-9" style="height: 600px">
        <h5>Điều khoản và quy định</h5>
        <hr>

        <% dataRules.forEach((rules) => { %>
        <em class="itemTextCategory"><%= rules.content %></em>
        <%
            const lib = dataLibrarian.find(libra => libra._id.equals(rules.librarian));
        %>
        <br>
        <strong style="float: right"><%= lib.fullname %></strong>
        <br>


