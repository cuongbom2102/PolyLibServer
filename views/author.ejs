<div class="row">
    <div class="col-3" style="border-right: 1px solid gray;; height: 1500px">
        <h5 style="margin-top: 10px;margin-bottom: 10px">Quản lý sách</h5>
        <div class="list-group">
            <a href="/BookCategory" class="list-group-item list-group-item-action">Loại Sách</a>
            <a href="/Author" class="list-group-item list-group-item-action">Tác Giả </a>
            <a href="/Book" class="list-group-item list-group-item-action">Sách</a>
            <a href="/loanSlip" class="list-group-item list-group-item-action">Phiếu Mượn</a>
            <a href="/salesSlip" class="list-group-item list-group-item-action">Phiếu Bán</a>
        </div>

        <h5 style="margin-top: 10px;margin-bottom: 10px">Quản lý sản phẩm</h5>
        <div class="list-group">
            <a href="/goodsCategory" class="list-group-item list-group-item-action">Loại Sản Phẩm</a>
            <a href="/Goods" class="list-group-item list-group-item-action">Sản Phẩm </a>
            <a href="/Bill" class="list-group-item list-group-item-action">Hóa Đơn</a>
        </div>


        <h5 style="margin-top: 15px">Thêm tác giả</h5>
        <form action="author/addAuthor" method="post" enctype="multipart/form-data" onsubmit="return validateAndRedirect('add')">
            <input class="input" id="inputFullname" name="fullName" type="text" placeholder="Enter full name...">
            <input class="input" id="inputBirthday" name="birthday" type="date" placeholder="Enter birthday...">
            <input class="input" id="inputNationality"  name="nationality" type="text" placeholder="Enter nationality...">
            <input class="input" id="inputBiography"  name="biography" type="text" placeholder="Enter biography...">
            <input id="choose" type="file" name="imageAuthor" multiple onchange="addImage(this)">
            <img class="hiddenImageAdd" style="width: 240px;height: 240px; margin-top: 10px" id="ImageAdd" src="" alt="Current Image">
            <br><br>
            <input id="push" type="submit" value="Save" >
        </form>

        <h5 style="margin-top: 30px">Cập nhật tác giả</h5>
        <form action="author/updateAuthor" method="post" enctype="multipart/form-data" onsubmit="return validateAndRedirect('update')">
            <input class="input" id="input_idUpdate"  name="_id" type="hidden">
            <input class="input" id="input_fullNameUpdate" name="fullName" type="text" placeholder="Enter full name...">
            <input class="input" id="input_birthdayUpdate" name="birthday" type="date" placeholder="Enter birthday...">
            <input class="input" id="input_nationalityUpdate" name="nationality" type="text" placeholder="Enter nationality...">
            <input class="input"  id="input_biographyUpdate" type="text" placeholder="Enter biography...">
            <input id="choose" type="file" name="imageAuthor" multiple onchange="updateCurrentImage(this)">
            <img class="hiddenImage" style="width: 240px;height: 240px; margin-top: 10px" id="currentImage" src="" alt="Current Image">
            <br><br>
            <input id="push" type="submit" value="Update" >
        </form>

        <div style="height: 320px;background-color: #F8F9FA;;margin-top: 20px;border-radius: 10px">
            <img style=" width: 100%; height: 50%;margin-top: 80px" src="uploads/image2.png">
        </div>
    </div>
    <div class="col-9" style="height: 600px">

        <h5>Danh sách tác giả</h5>
        <div class="ListAuthor" >
            <% data.forEach((author) => { %>
            <div class="itemAuthor">
                <img class="imgAuthor" src="<%= author.image %>">
                <em class="itemTextFullName"><%= author.fullName %></em>
                <br>
                <em class="itemText">Quốc tịch: <%= author.nationality %></em>
                    <button style="margin-left: 5px; margin-top: 5px; width: 95%" type="button" class="btn btn-warning" type="button" class="btn btn-warning" onclick="openAlertDialog('<%= author._id %>', '<%= author.fullName %>', '<%= author.birthday %>', '<%= author.nationality %>', '<%= author.image %>', '<%= author.biography %>')">Details</button>
            </div>
                <% }) %>
        </div>

    </div>
</div>

</body>
<script>
    function loadItemData(authorId, authorFullName,authorBirthday,authorNationality, authorImage, authorBiography) {
        // Lấy các trường input
        var input_id = document.getElementById('input_idUpdate');
        var fullName = document.getElementById('input_fullNameUpdate');
        var birthday = document.getElementById('input_birthdayUpdate');
        var nationality = document.getElementById('input_nationalityUpdate');
        var biography = document.getElementById('input_biographyUpdate');
        var currentImage = document.getElementById('currentImage');

        // Gán dữ liệu của member vào các trường input
        input_id.value = authorId;
        fullName.value = authorFullName;
        nationality.value = authorNationality;
        biography.value = authorBiography;
        currentImage.src = authorImage;

        if (authorBirthday) {
            // Chuyển đổi từ chuỗi ISO 8601 sang định dạng yyyy-MM-dd
            var date = new Date(authorBirthday);
            var formattedDate = date.toISOString().substring(0, 10);
            birthday.value = formattedDate;
        } else {
            birthday.value = ''; // Đặt giá trị rỗng nếu không có ngày sinh
        }
        if (authorImage) {
            currentImage.classList.remove('hiddenImage');
            currentImage.classList.add('visibleImage');
            currentImage.src = authorImage;
        } else {
            currentImage.classList.remove('visibleImage');
            currentImage.classList.add('hiddenImage');
        }
    }
    function updateCurrentImage(input) {
        var currentImage = document.getElementById('currentImage');

        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                currentImage.src = e.target.result;
                currentImage.classList.remove('hiddenImage');
                currentImage.classList.add('visibleImage');
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            currentImage.classList.remove('visibleImage');
            currentImage.classList.add('hiddenImage');
        }
    }
    function addImage(input) {
        var ImageAdd = document.getElementById('ImageAdd');

        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                ImageAdd.src = e.target.result;
                ImageAdd.classList.remove('hiddenImageAdd');
                ImageAdd.classList.add('visibleImageAdd');
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            ImageAdd.classList.remove('visibleImageAdd');
            ImageAdd.classList.add('hiddenImageAdd');
        }
    }

    function openAlertDialog(authorId, authorFullName,authorBirthday,authorNationality, authorImage, authorBiography) {
        const alertDialog = document.createElement('div');
        alertDialog.classList.add('alert-dialog');

        const closeButton = document.createElement('button');
        closeButton.classList.add('close-button');
        closeButton.textContent = 'X';
        closeButton.addEventListener('click', closeAlertDialog);

        // Tạo div lớn bao quanh các phần tử
        const contentWrapper = document.createElement('div');
        contentWrapper.classList.add('content-wrapper');

        const content = document.createElement('div');
        content.classList.add('content');

        const buttons = document.createElement('div');
        buttons.classList.add('buttons');

        const image = document.createElement('img');
        image.classList.add('alert-dialog-image');
        image.src = `${authorImage}`;

        const fullName = document.createElement('div');
        fullName.classList.add('alert-dialog-fullName');
        fullName.textContent = `Tác giả: ${authorFullName}`

        if (authorBirthday) {
            // Chuyển đổi từ chuỗi ISO 8601 sang định dạng yyyy-MM-dd
            var date = new Date(authorBirthday);
            var day = date.getDate().toString().padStart(2, '0'); // Ngày
            var month = (date.getMonth() + 1).toString().padStart(2, '0'); // Tháng (đánh số từ 0 - 11)
            var year = date.getFullYear(); // Năm
            var formattedDate = `${day}-${month}-${year}`;
        }

        const birthday = document.createElement('div');
        birthday.classList.add('alert-dialog-birthday');
        birthday.textContent = `Ngày sinh: ${formattedDate}`

        const nationality = document.createElement('div');
        nationality.classList.add('alert-dialog-nationality');
        nationality.textContent = `Quốc tịch : ${authorNationality}`

        const introduce = document.createElement('div');
        introduce.classList.add('alert-dialog-biography');
        introduce.textContent = `Giới thiệu : ${authorBiography}`

        const deleteButton = document.createElement('button');
        deleteButton.classList.add('button');
        deleteButton.textContent = 'Delete';
        deleteButton.addEventListener('click', () => confirmDelete(authorId));

        const updateButton = document.createElement('button');
        updateButton.classList.add('button');
        updateButton.textContent = 'Update';
        updateButton.addEventListener('click', () =>{
            loadItemData(authorId, authorFullName,authorBirthday,authorNationality, authorImage, authorBiography);
            closeAlertDialog();
        });


        content.appendChild(fullName);
        content.appendChild(birthday);
        content.appendChild(nationality);

        // Thêm các phần tử vào div lớn
        contentWrapper.appendChild(image);
        contentWrapper.appendChild(content);

        buttons.appendChild(deleteButton)
        buttons.appendChild(updateButton)

        alertDialog.appendChild(closeButton);
        alertDialog.appendChild(contentWrapper);
        alertDialog.appendChild(introduce);
        alertDialog.appendChild(buttons);


        document.body.appendChild(alertDialog);
    }

    function confirmDelete(_id) {
        var result = confirm("Bạn có chắc muốn xóa thành viên này không?");
        if (result) {
            window.location.href = "author/delete/?_id=" + _id;
        }
    }

    function closeAlertDialog() {
        const alertDialog = document.querySelector('.alert-dialog');
        if (alertDialog) {
            document.body.removeChild(alertDialog);

        }
    }

    function validateAndRedirect(status) {
        var fullname;
        var birthday;
        var nationality;
        var biography;
        var image;
        if (status==='add'){
            fullName = document.getElementById('inputFullname').value;
            birthday = document.getElementById('inputBirthday').value;
            nationality = document.getElementById('inputNationality').value;
            biography = document.getElementById('inputBiography').value;
            image = document.getElementById('choose').files[0];
            if (fullName.length === 0 || birthday.length === 0 || nationality.length === 0 || biography.length === 0 || !image) {
                alert('Vui lòng điền đầy đủ thông tin và chọn ảnh!');
                return false
            }
        }else if (status==='update') {
            fullName = document.getElementById('input_fullNameUpdate').value;
            birthday = document.getElementById('input_birthdayUpdate').value;
            nationality = document.getElementById('input_nationalityUpdate').value;
            biography = document.getElementById('input_biographyUpdate').value;


            if (fullName.length === 0 || birthday.length === 0 || nationality.length === 0 || biography.length === 0) {
                alert('Vui lòng điền đầy đủ thông tin!');
                return false
            }
        }
    }
</script>
